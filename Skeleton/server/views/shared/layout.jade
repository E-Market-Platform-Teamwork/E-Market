        link(rel="stylesheet" href="/css/site.css")
        link(rel="shortcut icon" href="../../../images/favicon.ico")
    body(ng-app="app")
        header
            nav.navbar.navbar-default
                .container-fluid
                    .navbar-header
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                            span.sr-only E-commerse navigation
                        a.navbar-brand(href='/') Company Name
                    #bs-example-navbar-collapse-1.collapse.navbar-collapse
                        if(currentUser && currentUser.roles === 'admin')
                            ul.nav.navbar-nav
                                li.active
                                    a(href="/admin") Home
                                li
                                    a(href="/admin/products") Products
                                li
                                    a(href="/admin/categories") Categories
                                li
                                    a(href="/admin/about") About Us
                        else
                            ul.nav.navbar-nav
                                li.active
                                    a(href='/')
                                        | Home
                                        span.sr-only (current)
                                li
                                    a(href='/categories') Categories
                                li
                                    a(href='/products') Products
                                li
                                    a(href='/about') About Us
                                li
                                    a(href='/chat') Chat
                        ul.nav.navbar-nav.navbar-right
                            if (currentUser)
                                if(currentUser.roles === 'admin')
                                    li
                                        a(href="/admin/categories/add") Add Category
                                    li
                                        a(href="/admin/products/add") Add Product
                                li
                                    a(href="/account/profile") #{currentUser.username}
                                li
                                    a(href="/account/logout") Logout
                            else
                                li
                                    a(href="/account/register") Register
                                li
                                    a(href="/account/login") Login
            img(src='../../../images/header.jpg').center-block
