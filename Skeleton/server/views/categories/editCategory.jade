extends ../shared/layout
block main-content
   form.form-horizontal(method="post" action="/admin/categories/edit/#{category.id}").jt-background
      fieldset
      legend Edit Category
         .form-group
            label.col-md-2.control-label(for='name') Name
            .col-md-8
               input#name.form-control(type='text', placeholder='Name',value="#{category.name}", name="name")
         .form-group
            label.col-md-2.control-label(for='textArea') Description
            .col-md-8
               textarea#textArea.form-control(rows='3', placeholder='Write short description of the category',name="description")
         .form-group
            .col-lg-10.col-lg-offset-2
               a(href="/admin/categories/edit/#{category.id}").btn.btn-default Cancel
               input.btn.btn-primary.buttonMargin(type='submit' value="Update")
