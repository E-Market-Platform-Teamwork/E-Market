extends ../shared/layout.jade

block main-content
    form.form-horizontal(method="post" action="/account/profile")
        fieldset
        legend Update your personal details
        .form-group
            label.col-lg-2.control-label(for='username') Change Username
            .col-lg-10
            input#username.form-control(type='text', value="#{user.username}", name="username" disabled)
        .form-group
            label.col-lg-2.control-label(for='password') Change Password
            .col-lg-10
            input#password.form-control(type='password', name="password")
        .form-group
            label.col-lg-2.control-label(for='confirmPassword') Confirm New Password
            .col-lg-10
            input#confirmPassword.form-control(type='password', name="confirmPassword")
        .form-group
            .col-lg-10.col-lg-offset-2
            a(href="/").btn.btn-default Cancel
            input.btn.btn-primary(type='submit' value="Apply")